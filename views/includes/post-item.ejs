<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author.name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <form action="/delete-post/<%= post._id %>" method="POST">
      <button class="btn">Delete Post</button>
    </form>   
    <a class="btn" href="/showedit-post/<%= post._id %>/edit">Edit Post</a>
    <a class="btn" href="/post-detail/<%= post._id %>">View Post</a>
  </div>
</article>